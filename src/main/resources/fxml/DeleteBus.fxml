<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pts.controller.DeleteBusController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Text text="Delete a Bus">
        <font>
            <Font size="24.0" name="System Bold"/>
        </font>
    </Text>

    <HBox spacing="10.0" alignment="CENTER">
        <Label text="Bus ID:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtBusID" prefWidth="150.0" promptText="e.g., B10"/>
    </HBox>

    <TableView fx:id="tableBuses" prefHeight="300.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="colBusID" text="Bus ID" prefWidth="166.0"/>
            <TableColumn fx:id="colModel" text="Model" prefWidth="167.0"/>
            <TableColumn fx:id="colYear" text="Year" prefWidth="167.0"/>
        </columns>
    </TableView>

    <HBox spacing="15.0" alignment="CENTER">
        <Button text="Back to Home" onAction="#handleBackToHome" prefWidth="120.0" prefHeight="35.0"/>
        <Button text="Delete" onAction="#handleDelete" prefWidth="120.0" prefHeight="35.0" style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
    </HBox>
</VBox>
