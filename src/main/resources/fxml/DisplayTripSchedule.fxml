<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@../styles/dark-theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pts.controller.DisplayTripScheduleController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Text text="Display Trip Schedule" styleClass="header">
        <font>
            <Font size="24.0" name="System Bold"/>
        </font>
    </Text>

    <VBox spacing="15.0" alignment="CENTER_LEFT" prefWidth="400.0">
        <Label text="Start Location Name" style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtStartLocation" promptText="e.g., Los Angeles"/>

        <Label text="Destination Name" style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtDestination" promptText="e.g., West Covina"/>

        <Label text="Date" style="-fx-font-size: 14px;"/>
        <DatePicker fx:id="datePicker" promptText="Select date"/>
    </VBox>

    <HBox spacing="15.0" alignment="CENTER">
        <Button text="Back to Home" onAction="#handleBackToHome" prefWidth="140.0" prefHeight="35.0" styleClass="secondary"/>
        <Button text="OK" onAction="#handleSearch" prefWidth="120.0" prefHeight="35.0" styleClass="success"/>
    </HBox>
</VBox>
