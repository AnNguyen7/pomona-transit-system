<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #f0fdf4);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pts.controller.HomeController">
    <padding>
        <Insets bottom="60.0" left="60.0" right="60.0" top="60.0"/>
    </padding>

    <!-- Header -->
    <VBox alignment="CENTER" spacing="8.0">
        <Text text="POMONA TRANSIT SYSTEM">
            <font>
                <Font name="Space Grotesk Bold" size="42.0"/>
            </font>
            <fill>
                <javafx.scene.paint.LinearGradient startX="0.0" startY="0.0" endX="1.0" endY="0.0">
                    <stops>
                        <javafx.scene.paint.Stop offset="0.0">
                            <color>
                                <javafx.scene.paint.Color red="0.318" green="0.690" blue="0.102" opacity="1.0"/>
                            </color>
                        </javafx.scene.paint.Stop>
                        <javafx.scene.paint.Stop offset="1.0">
                            <color>
                                <javafx.scene.paint.Color red="0.227" green="0.490" blue="0.071" opacity="1.0"/>
                            </color>
                        </javafx.scene.paint.Stop>
                    </stops>
                </javafx.scene.paint.LinearGradient>
            </fill>
            <style>
                -fx-font-weight: 900;
                -fx-letter-spacing: 2px;
            </style>
        </Text>

        <Text text="Database Management Interface">
            <font>
                <Font name="IBM Plex Sans" size="14.0"/>
            </font>
            <style>
                -fx-fill: #6b7280;
                -fx-font-weight: 400;
                -fx-letter-spacing: 1px;
            </style>
        </Text>
    </VBox>

    <!-- Button Grid -->
    <HBox alignment="CENTER" spacing="30.0">
        <VBox spacing="16.0" alignment="CENTER">
            <!-- Query Operations - Light Green -->
            <Button fx:id="btnDisplaySchedule" text="Display Trip Schedule" onAction="#handleDisplaySchedule"
                    prefWidth="260.0" prefHeight="55.0"
                    style="-fx-font-family: 'IBM Plex Sans Medium';
                           -fx-font-size: 13px;
                           -fx-font-weight: 600;
                           -fx-background-color: linear-gradient(to bottom, #51b01a, #3a7d12);
                           -fx-text-fill: white;
                           -fx-background-radius: 10px;
                           -fx-border-width: 0;
                           -fx-cursor: hand;
                           -fx-letter-spacing: 0.5px;
                           -fx-effect: dropshadow(gaussian, rgba(81, 176, 26, 0.3), 8, 0, 0, 2);"/>

            <Button fx:id="btnEditSchedule" text="Edit Schedule" onAction="#handleEditSchedule"
                    prefWidth="260.0" prefHeight="55.0"
                    style="-fx-font-family: 'IBM Plex Sans Medium';
                           -fx-font-size: 13px;
                           -fx-font-weight: 600;
                           -fx-background-color: linear-gradient(to bottom, #51b01a, #3a7d12);
                           -fx-text-fill: white;
                           -fx-background-radius: 10px;
                           -fx-border-width: 0;
                           -fx-cursor: hand;
                           -fx-letter-spacing: 0.5px;
                           -fx-effect: dropshadow(gaussian, rgba(81, 176, 26, 0.3), 8, 0, 0, 2);"/>

            <Button fx:id="btnDisplayStops" text="Display Stops" onAction="#handleDisplayStops"
                    prefWidth="260.0" prefHeight="55.0"
                    style="-fx-font-family: 'IBM Plex Sans Medium';
                           -fx-font-size: 13px;
                           -fx-font-weight: 600;
                           -fx-background-color: linear-gradient(to bottom, #51b01a, #3a7d12);
                           -fx-text-fill: white;
                           -fx-background-radius: 10px;
                           -fx-border-width: 0;
                           -fx-cursor: hand;
                           -fx-letter-spacing: 0.5px;
                           -fx-effect: dropshadow(gaussian, rgba(81, 176, 26, 0.3), 8, 0, 0, 2);"/>

            <Button fx:id="btnWeeklySchedule" text="Weekly Driver Schedule" onAction="#handleWeeklySchedule"
                    prefWidth="260.0" prefHeight="55.0"
                    style="-fx-font-family: 'IBM Plex Sans Medium';
                           -fx-font-size: 13px;
                           -fx-font-weight: 600;
                           -fx-background-color: linear-gradient(to bottom, #51b01a, #3a7d12);
                           -fx-text-fill: white;
                           -fx-background-radius: 10px;
                           -fx-border-width: 0;
                           -fx-cursor: hand;
                           -fx-letter-spacing: 0.5px;
                           -fx-effect: dropshadow(gaussian, rgba(81, 176, 26, 0.3), 8, 0, 0, 2);"/>
        </VBox>

        <VBox spacing="16.0" alignment="CENTER">
            <!-- Add Operations - Light Green -->
            <Button fx:id="btnAddDriver" text="Add Driver" onAction="#handleAddDriver"
                    prefWidth="260.0" prefHeight="55.0"
                    style="-fx-font-family: 'IBM Plex Sans Medium';
                           -fx-font-size: 13px;
                           -fx-font-weight: 600;
                           -fx-background-color: linear-gradient(to bottom, #51b01a, #3a7d12);
                           -fx-text-fill: white;
                           -fx-background-radius: 10px;
                           -fx-border-width: 0;
                           -fx-cursor: hand;
                           -fx-letter-spacing: 0.5px;
                           -fx-effect: dropshadow(gaussian, rgba(81, 176, 26, 0.3), 8, 0, 0, 2);"/>

            <Button fx:id="btnAddBus" text="Add Bus" onAction="#handleAddBus"
                    prefWidth="260.0" prefHeight="55.0"
                    style="-fx-font-family: 'IBM Plex Sans Medium';
                           -fx-font-size: 13px;
                           -fx-font-weight: 600;
                           -fx-background-color: linear-gradient(to bottom, #51b01a, #3a7d12);
                           -fx-text-fill: white;
                           -fx-background-radius: 10px;
                           -fx-border-width: 0;
                           -fx-cursor: hand;
                           -fx-letter-spacing: 0.5px;
                           -fx-effect: dropshadow(gaussian, rgba(81, 176, 26, 0.3), 8, 0, 0, 2);"/>

            <!-- Delete Operation - Red -->
            <Button fx:id="btnDeleteBus" text="Delete Bus" onAction="#handleDeleteBus"
                    prefWidth="260.0" prefHeight="55.0"
                    style="-fx-font-family: 'IBM Plex Sans Medium';
                           -fx-font-size: 13px;
                           -fx-font-weight: 600;
                           -fx-background-color: linear-gradient(to bottom, #f87171, #ef4444);
                           -fx-text-fill: white;
                           -fx-background-radius: 10px;
                           -fx-border-width: 0;
                           -fx-cursor: hand;
                           -fx-letter-spacing: 0.5px;
                           -fx-effect: dropshadow(gaussian, rgba(239, 68, 68, 0.3), 8, 0, 0, 2);"/>

            <!-- Record Operation - Green Accent -->
            <Button fx:id="btnActualTripData" text="Record Actual Trip Data" onAction="#handleActualTripData"
                    prefWidth="260.0" prefHeight="55.0"
                    style="-fx-font-family: 'IBM Plex Sans Medium';
                           -fx-font-size: 13px;
                           -fx-font-weight: 600;
                           -fx-background-color: linear-gradient(to bottom, #51b01a, #3a7d12);
                           -fx-text-fill: white;
                           -fx-background-radius: 10px;
                           -fx-border-width: 0;
                           -fx-cursor: hand;
                           -fx-letter-spacing: 0.5px;
                           -fx-effect: dropshadow(gaussian, rgba(81, 176, 26, 0.3), 8, 0, 0, 2);"/>
        </VBox>
    </HBox>

    <!-- Footer -->
    <Text text="An Nguyen &amp; Viet • CS 4350 • 2025">
        <font>
            <Font name="IBM Plex Sans" size="11.0"/>
        </font>
        <style>
            -fx-fill: #6b7280;
            -fx-font-weight: 400;
        </style>
    </Text>
</VBox>
