<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pts.controller.AddActualTripDataController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Text text="Add Actual Trip Stop Info">
        <font>
            <Font size="24.0" name="System Bold"/>
        </font>
    </Text>

    <GridPane hgap="10.0" vgap="10.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        </columnConstraints>

        <Label text="Trip Number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtTripNumber" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Scheduled Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtScheduledStartTime" promptText="HH:MM(am/pm)" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Stop Number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtStopNumber" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Scheduled Arrival Time:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="txtScheduledArrivalTime" promptText="HH:MM(am/pm)" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Actual Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="txtActualStartTime" promptText="HH:MM(am/pm)" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Actual Arrival Time:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="txtActualArrivalTime" promptText="HH:MM(am/pm)" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Number of Passenger In:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextField fx:id="txtPassengerIn" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Label text="Number of Passenger Out:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <TextField fx:id="txtPassengerOut" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    </GridPane>

    <HBox spacing="15.0" alignment="CENTER">
        <Button text="Back to Home" onAction="#handleBackToHome" prefWidth="120.0" prefHeight="35.0"/>
        <Button text="Submit" onAction="#handleSubmit" prefWidth="120.0" prefHeight="35.0" style="-fx-background-color: #5cb85c; -fx-text-fill: white;"/>
    </HBox>
</VBox>
